{% extends 'base.html.twig' %}

{% block title %}SORTIR.COM{% endblock %}

{% block body %}
<canvas id="snow" class="snow"></canvas>
<div class="container text-center mt-5">
    <h1>
        <span class="typewrite" data-period="1000" data-type='[ "Envie de sortir ?","Entrez votre Ville ;) ", "Entrez votre Campus ;) " ]'>  
            <span class="wrap"></span>  
        </span>
    </h1>
</div>
{#    Search Bar#}
    <div class="container mt-4">
        <div class="container h-100">
            <div class="d-flex justify-content-center h-100">
                <div class="searchbar">
                    <input class="search_input" id="searchBox" type="search" placeholder="Rechercher..."/>
                    <a href="#" class="search_icon"><i class="fas fa-search"></i></a>
                </div>
            </div>
        </div>
    </div>
<div class="main-card-div container row">
{% for event in events %}
<div class="box col-lg-4 col-12 col-sm-12">
    <div class="card card-container mt-4">
                <div class="booking-card" style="background-image: url(uploads/images/events/{{ event.affiche }})">
                    <div class="book-container">
                            <div class="content">
                                <a href="{{ path('app_details', {"id": event.id}) }}"><button class="btn">Participer</button></a>
                            </div>
                    </div>
                    <div class="informations-container">
                        <h2 class="title">{{ event.nom }}</h2>
                            <p class="sub-title">{{ event.infosSortie | raw }}</p>
                                <p class="price">
                                    <i class="fa-solid fa-users fa icon"></i>
                                    {{ event.nbInscriptionsMax }}
                                    <i class="fa-solid fa-clock-rotate-left etatIcon"></i>
                                    {{ event.state }}</p>
                                    <div class="more-information">
                                        <div class="info-and-date-container">
                                            <div class="box info">
                                                <svg class="icon" style="width:24px;height:24px" viewBox="0 0 24 24">
                                                    <path fill="currentColor" d="M11,9H13V7H11M12,20C7.59,20 4,16.41 4,12C4,7.59 7.59,4 12,4C16.41,4 20,7.59 20,12C20,16.41 16.41,20 12,20M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2M11,17H13V11H11V17Z" />
                                                </svg>
                                                <br>
                                                    <span>Campus :<br>{{ event.campus }}<br> Lieu :<br> {{ event.place }}</span>
                                            </div>
                                            <div class="box date">
                                                <svg class="icon" style="width:24px;height:24px" viewBox="0 0 24 24">
                                                    <path fill="currentColor" d="M19,19H5V8H19M16,1V3H8V1H6V3H5C3.89,3 3,3.89 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V5C21,3.89 20.1,3 19,3H18V1M17,12H12V17H17V12Z" />
                                                </svg>
                                                <br>
                                                    <span>{{ event.dateHeureDebut | date('d M Y') | format_datetime('full', 'none', locale='fr') }}<br><br> Durée : {{ event.duree  | format_datetime('none', 'short', locale='fr') }}<br> (heures)</span>
                                            </div>
                                        </div>
                                            <p class="disclaimer">*Sous réserve d'acceptation d'un organisateur</p>
                                    </div>
                    </div>
                </div>
                <span class="is-hidden">secret</span> 
    </div>
</div>
{% endfor %}
</div>


{% endblock %}
